<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen2" >

    <ImageView
        android:id="@+id/screen2Frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frameregister1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/screen2Frame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frameregister2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/screen2Title"
        android:layout_width="366dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:text="Lets Explore Everything With Us!"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/languange_logo"
        app:layout_constraintStart_toStartOf="@+id/screen2Title"
        app:layout_constraintTop_toBottomOf="@+id/screen2Title" />

    <ImageView
        android:id="@+id/imageProgramming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/programming_logo"
        app:layout_constraintEnd_toEndOf="@+id/screen2Title"
        app:layout_constraintTop_toBottomOf="@+id/screen2Title" />

    <ImageView
        android:id="@+id/imageScience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/science_logo"
        app:layout_constraintStart_toStartOf="@+id/imageLanguage"
        app:layout_constraintTop_toBottomOf="@+id/imageLanguage" />

    <ImageView
        android:id="@+id/imageMath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/math_logo"
        app:layout_constraintEnd_toEndOf="@+id/imageProgramming"
        app:layout_constraintTop_toBottomOf="@+id/imageProgramming" />

    <TextView
        android:id="@+id/TVLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageLanguage"
        app:layout_constraintStart_toStartOf="@+id/imageLanguage"
        app:layout_constraintTop_toBottomOf="@+id/imageLanguage" />

    <TextView
        android:id="@+id/TVProgramming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Programming"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageProgramming"
        app:layout_constraintStart_toStartOf="@+id/imageProgramming"
        app:layout_constraintTop_toBottomOf="@+id/imageProgramming" />

    <TextView
        android:id="@+id/TVScience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageScience"
        app:layout_constraintStart_toStartOf="@+id/imageScience"
        app:layout_constraintTop_toBottomOf="@+id/imageScience" />

    <TextView
        android:id="@+id/TVMath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageMath"
        app:layout_constraintStart_toStartOf="@+id/imageMath"
        app:layout_constraintTop_toBottomOf="@+id/imageMath" />

</androidx.constraintlayout.widget.ConstraintLayout>