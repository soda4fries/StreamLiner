<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splashScreen.SplashScreen1" >

    <ImageView
        android:id="@+id/screen1Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:src="@drawable/streamliner_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/streamliner_logo" />

    <TextView
        android:id="@+id/screen1Title"
        android:layout_width="331dp"
        android:layout_height="149dp"
        android:layout_marginTop="120dp"
        android:text="Next generation learning platform \n\nWelcome to Stream Liner Education Your Guide To A Good Experience For E-Learning App"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/screen1Logo"
        app:layout_constraintStart_toStartOf="@+id/screen1Logo"
        app:layout_constraintTop_toBottomOf="@+id/screen1Logo" />

    <Button
        android:id="@+id/Screen1Next"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/darkBlue"
        android:text="Next"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>