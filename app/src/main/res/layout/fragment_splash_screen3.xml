<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".SplashScreen3">

    <TextView
        android:id="@+id/screen3Title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="In The App"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/BoxTimetable"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/darkBlue"
        android:gravity="left|center_vertical"
        android:text="  Timetable\n  Plan your study schedule with ease"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/BoxQuiz"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/darkBlue"
        android:gravity="right|center_vertical"
        android:text="Quiz  \nTest your knowledge and track progress  "
        android:textColor="@color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/BoxTutoring"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/darkBlue"
        android:gravity="left|center_vertical"
        android:text="  Tutoring\n  Connect with experts for extra help"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/BoxStudyMaterial"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/darkBlue"
        android:gravity="right|center_vertical"
        android:text="Study Material  \nAccess essential resources anytime  "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/BoxChat"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@color/darkBlue"
        android:gravity="left|center_vertical"
        android:text="  Chat\n  Chat and collaborative with peers"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/Screen3Next"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_gravity="center|right"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/darkBlue"
        android:text="Next"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>