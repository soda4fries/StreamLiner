<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">


    <EditText
        android:id="@+id/ETPwd"
        android:layout_width="338dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:textColorHint="@color/subtitleGrey"
        app:layout_constraintEnd_toEndOf="@+id/ETUsername"
        app:layout_constraintStart_toStartOf="@+id/ETUsername"
        app:layout_constraintTop_toBottomOf="@+id/ETUsername" />

    <Button
        android:id="@+id/BTSignIn"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="@color/darkBlue"
        android:text="Sign In"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETPwd" />

    <EditText
        android:id="@+id/ETUsername"
        android:layout_width="333dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textColorHint="@color/subtitleGrey"
        app:layout_constraintEnd_toEndOf="@+id/subtitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/subtitle"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="339dp"
        android:layout_height="82dp"
        android:layout_marginTop="40dp"
        android:text="Welcome back! Login with your account"
        android:textColor="#6F7172"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/Title"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:text="Lets Sign You In"
        android:textColor="#1A4C8E"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>