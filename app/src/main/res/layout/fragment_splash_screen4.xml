<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen4" >


    <ImageView
        android:id="@+id/screen4frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/framelogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/screen4Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="About Us"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnGetStarted"
        android:layout_width="212dp"
        android:layout_height="66dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="@color/darkBlue"
        android:gravity="center"
        android:text="Get Started"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/screen4Subtitle"
        android:layout_width="352dp"
        android:layout_height="137dp"
        android:layout_marginTop="20dp"
        android:text="Since 2023, our core team of educators and developers has been committed to making quality education accessible to all. With diverse expertise and a shared vision, weâ€™re building a learning app that empowers users to grow, learn, and thrive in a supportive digital environment."
        android:textColor="@color/darkBlue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/screen4Title"
        app:layout_constraintStart_toStartOf="@+id/screen4Title"
        app:layout_constraintTop_toBottomOf="@+id/screen4Title" />

    <TextView
        android:id="@+id/screen4TitleOurTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Our Team"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/screen4Subtitle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/screen4Subtitle"
        app:layout_constraintTop_toBottomOf="@+id/screen4Subtitle" />

    <ImageView
        android:id="@+id/profilePic1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/screen4TitleOurTeam"
        app:layout_constraintStart_toStartOf="@+id/screen4TitleOurTeam"
        app:layout_constraintTop_toBottomOf="@+id/screen4TitleOurTeam" />

    <ImageView
        android:id="@+id/profilePic2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toStartOf="@+id/profilePic1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/screen4TitleOurTeam"
        app:layout_constraintTop_toBottomOf="@+id/profilePic1" />

    <ImageView
        android:id="@+id/profilePic3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/screen4TitleOurTeam"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profilePic1"
        app:layout_constraintTop_toBottomOf="@+id/profilePic1" />

    <ImageView
        android:id="@+id/profilePic4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/profilePic2"
        app:layout_constraintStart_toStartOf="@+id/profilePic2"
        app:layout_constraintTop_toBottomOf="@+id/profilePic2" />

    <ImageView
        android:id="@+id/profilePic5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/profilePic3"
        app:layout_constraintStart_toStartOf="@+id/profilePic3"
        app:layout_constraintTop_toBottomOf="@+id/profilePic3" />

</androidx.constraintlayout.widget.ConstraintLayout>